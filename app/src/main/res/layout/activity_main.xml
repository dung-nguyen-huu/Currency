<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtSymbol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textSize="40sp"
        android:textColor="#FF000000"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:textColor="#FF000000"
        android:background="@android:color/transparent"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/txtSymbol1"/>
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:background="@drawable/white_button"/>

    <TextView
        android:id="@+id/txtSymbol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textSize="40dp"
        android:layout_below="@+id/spinner1"
        android:textColor="#FF000000"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:textColor="#FF000000"
        android:background="@android:color/transparent"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/spinner1"
        android:layout_toRightOf="@+id/txtSymbol2"/>
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:background="@drawable/white_button"/>

    <Button
        android:id="@+id/btnBS"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentEnd="true"
        android:text="BS"
        android:textSize="30sp"
        android:background="@drawable/gray_button"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btnCE"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner2"
        android:layout_toLeftOf="@+id/btnBS"
        android:text="CE"
        android:textSize="30sp"
        android:background="@drawable/gray_button"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBS"
        android:layout_alignParentEnd="true"
        android:text="9"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCE"
        android:layout_toLeftOf="@+id/btn9"
        android:text="8"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn7"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCE"
        android:layout_toLeftOf="@+id/btn8"
        android:text="7"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn9"
        android:layout_alignParentEnd="true"
        android:text="6"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_toLeftOf="@+id/btn6"
        android:text="5"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn5"
        android:text="4"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn6"
        android:layout_alignParentEnd="true"
        android:text="3"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_toLeftOf="@+id/btn3"
        android:text="2"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/btn2"
        android:text="1"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnDot"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:layout_alignParentEnd="true"
        android:text="."
        android:textSize="30sp"
        android:background="@drawable/gray_button"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn0"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_toLeftOf="@+id/btnDot"
        android:text="0"
        android:textSize="30sp"
        android:background="@drawable/white_button"
        android:layout_margin="10dp"/>

</RelativeLayout>